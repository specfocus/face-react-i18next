{
  "name": "@specfocus/view-focus.i18next",
  "version": "0.0.1",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/specfocus/view-focus.i18next.git"
  },
  "scripts": {
    "prebuild-skip": "tslint -c tslint.json -p tsconfig.json --fix",
    "clean": "rimraf ./dist",
    "build": "tsc",
    "exjest": "yarn node --experimental-vm-modules $(yarn bin jest)",
    "test": "yarn exjest --coverage",
    "test:watch": "yarn exjest --watch"
  },
  "dependencies": {
    "i18next": "^21.8.10",
    "i18next-browser-languagedetector": "^6.1.4",
    "i18next-http-backend": "^1.4.1",
    "react-i18next": "^11.17.2"
  },
  "devDependencies": {
    "@specfocus/view-focus.i18n": "^0.0.1",
    "@types/jest": "^27.0.3",
    "@types/node": "^17.0.5",
    "@types/react": "^17.0.37",
    "@types/react-dom": "^17.0.11",
    "date-fns": "^2.28.0",
    "jest": "^28.1.0",
    "react": "^18.2.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.1",
    "tslint": "^6.1.3",
    "typescript": "^4.5.0"
  },
  "peerDependencies": {
    "@specfocus/view-focus.i18n": ">= 0.0.x",
    "react": "^17.0.2 || ^18.0.0-0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
